#!/bin/sh
#
# Saumon i3blocks scripts
# ping (display actual ping)
#

ping=$(ping -q -w 2 -c 1 1.1.1.1 | tail -n1 | cut -d '/' -f 5 | awk -F. '{print $1}' | tr -d '\n')

if [ $(expr "$ping" : "[0-9]*$") -eq 0 ]; then
  printf "<span color='#f44336'>ÔÖÅ</span>"
elif [ "$ping" -ge 500 ]; then
  printf "<span color='#EF6C00'>%s <span font_size='small'>ms</span></span>" "$ping"
else
  printf "%s <span font_size='small'>ms</span>" "$ping"
fi
