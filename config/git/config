[init]
  defaultBranch = main
[alias]
  abort = rebase --abort
  amend = commit --amend
  ass = add
  c = checkout
  cm = commit
  cmm = commit -m
  d = diff
  delete-remote-branch = push origin --delete
  delete-remote-tag = push origin --delete
  initial-commit = "!git commit -m \"Initial commit\" --allow-empty"
  logs = log --show-signature
  pa = pull --all
  pouche = push
  poule = pull
  poulet = pull
  p = pull
  psufh = push --force-with-lease
  psuhf = push --force-with-lease
  psuh = push
  pushf = push --force-with-lease
  pyll = pull
  r = restore
  rs = restore --staged
  sc = "!git commit -am \"Sync commit\" && git push"
  sd = diff --staged
  set-upstream = "!git branch --set-upstream-to=origin/`git symbolic-ref --short HEAD`"
  s = switch
  st = status
  tree = log --graph --full-history --all --pretty=format:"%h%x09%d%x20%s"
[color]
  ui = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  frag = magenta bold
  meta = yellow bold
  new = green
  old = red
